<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.runningoutofbreadth.boda.sectionactivities.ResultsActivity">

    <TextView
        android:id="@+id/header"
        style="@style/GeneralBigTextView"
        android:text="@string/results" />

    <LinearLayout
        android:id="@+id/counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/layout_counter_margin"
        android:orientation="horizontal"
        android:transitionName="@string/counter_transition_name">

        <TextView
            android:id="@+id/counter_number_correct"
            style="@style/GeneralBigTextView"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/counter_slash"
            style="@style/GeneralBigTextView"
            android:layout_gravity="center_horizontal"
            android:text="@string/counter_separator" />

        <TextView
            android:id="@+id/counter_total"
            style="@style/GeneralBigTextView"
            android:layout_gravity="center_horizontal"
            android:transitionName="@string/syllable_count_transition_name" />

    </LinearLayout>

</LinearLayout>
