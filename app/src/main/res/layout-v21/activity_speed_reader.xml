<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/speed_read_root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="#0099cc"
    tools:context="com.runningoutofbreadth.boda.sectionactivities.SpeedReaderActivity">

    <TextView
        android:id="@+id/hangeul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:keepScreenOn="true"
        android:text="@string/dummy_content"
        android:textColor="#33b5e5"
        android:textSize="@dimen/standalone_syllable_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/counter"
        android:transitionName="@string/counter_transition_name"
        style="@style/GeneralBigTextView" />

</FrameLayout>
