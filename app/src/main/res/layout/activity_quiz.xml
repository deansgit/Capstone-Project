<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    android:orientation="vertical"
    android:baselineAligned="false"
    tools:context="com.runningoutofbreadth.boda.sectionactivities.QuizActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="?attr/actionBarSize"
        android:maxHeight="@dimen/max_image_height"
        android:maxWidth="@dimen/max_image_width"
        android:scaleType="fitCenter"
        android:src="@android:drawable/btn_star" />

    <GridLayout
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:rowCount="2"
        android:columnCount="2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/choice_one"
            style="@style/QuizButtonStyle" />

        <TextView
            android:id="@+id/choice_two"
            style="@style/QuizButtonStyle" />

        <TextView
            android:id="@+id/choice_three"
            style="@style/QuizButtonStyle" />

        <TextView
            android:id="@+id/choice_four"
            style="@style/QuizButtonStyle" />

    </GridLayout>
</RelativeLayout>
