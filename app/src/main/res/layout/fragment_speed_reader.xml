<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.runningoutofbreadth.boda.sections.SpeedReaderFragment">

    <!--todo: background image with giant clock. colored bg-->

    <EditText
        android:id="@+id/syllable_count_input"
        style="@style/SyllableCountEditText" />

    <Button
        android:id="@+id/slow"
        style="@style/SpeedButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="@string/slow" />

    <Button
        android:id="@+id/normal"
        style="@style/SpeedButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="@string/medium" />

    <Button
        android:id="@+id/fast"
        style="@style/SpeedButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="@string/fast" />

    <Button
        android:id="@+id/ludicrous"
        style="@style/SpeedButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="@string/ludicrous" />

</LinearLayout>


