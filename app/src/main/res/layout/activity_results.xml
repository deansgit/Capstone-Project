<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.runningoutofbreadth.boda.sectionactivities.ResultsActivity">

    <TextView
        android:id="@+id/header"
        style="@style/GeneralBigTextView"
        android:text="@string/results" />

    <LinearLayout
        android:id="@+id/counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/layout_counter_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/speedreader_number_correct"
            style="@style/GeneralBigTextView"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/speedreader_slash"
            style="@style/GeneralBigTextView"
            android:layout_gravity="center_horizontal"
            android:text="@string/counter_separator" />

        <TextView
            android:id="@+id/speedreader_total"
            style="@style/GeneralBigTextView"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</LinearLayout>
