<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppTheme.NoActionBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.runningoutofbreadth.boda.sectionactivities.QuizActivity">

    <include
        android:id="@+id/counter"
        layout="@layout/counter_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <me.grantland.widget.AutofitTextView
        android:id="@+id/translation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_gravity="center"
        android:ellipsize="none"
        android:gravity="center"
        android:maxLines="2"
        android:text="@string/dummy_content"
        android:textSize="@dimen/standalone_syllable_size"
        android:textStyle="bold" />


    <LinearLayout
        android:id="@+id/choices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/choice_one"
            style="@style/QuizButtonStyle" />

        <TextView
            android:id="@+id/choice_two"
            style="@style/QuizButtonStyle" />

        <TextView
            android:id="@+id/choice_three"
            style="@style/QuizButtonStyle" />

        <TextView
            android:id="@+id/choice_four"
            style="@style/QuizButtonStyle" />

    </LinearLayout>

</LinearLayout>